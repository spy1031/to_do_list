<table class="table table-condensed">
  <thead>
    <tr >
      <td>Task</td>
      <td>Due date</td>
      <td>Note</td>
      <td>Settng</td>
    </tr>
  </thead>
  <tbody>
  <% @lists.each do |list| %>
    <% if @today < list.due_date %> 
      <tr class="info"> 
        
        <td><%= list.title.capitalize %></td>
        <td><%= list.due_date %></td>
        <td><%= link_to 'Show' ,list_path(list) %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list_path(list), method: :delete, data:{ confirm: "Are you sure?" } %></td>
        
      </tr>
    <% else %>
      <tr class="danger" > 
        <td><%= list.title %></td>
        <td><%= list.due_date %></td>
        
        <td><%= link_to 'Show' ,list_path(list) %></td> 
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td>Unfinished</td>
      </tr>
    <% end %>
  <% end %>

  <tr class="success">
    <td>Today</td>
    <td><%= @today %></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  </tbody>
</table>
<% if @list.due_date.present? && @today > @list.due_date  %>
  <ul>
    <li>The day is past.</li>
  </ul>
<% end %>
<%= render :partial => "form" %>

